[Unit]
Description=WSGI gunicorn Lyceum
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/home/lawrence/LyceumSite/
ExecStart=/usr/local/bin/gunicorn --limit-request-field_size 17179869184 --workers 1 --bind 0.0.0.0:8080 -m 777 wsgi:wsgi_app
Restart=always
KillSignal=SIGQUIT
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target
